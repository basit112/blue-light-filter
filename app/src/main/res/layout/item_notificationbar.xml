<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/noti_bg"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll_night_mode"
        android:layout_width="0dp"
        android:layout_height="@dimen/_60sdp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/_7sdp">

        <ImageView
            android:id="@+id/img_night_mode"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/ic_brightness_yellow" />

        <TextView
            android:id="@+id/tv_night_mode"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="Night Mode"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_10sdp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_flash_light"
        android:layout_width="0dp"
        android:layout_height="@dimen/_60sdp"
        android:layout_weight="1"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="vertical"
        android:padding="@dimen/_7sdp">

        <ImageView
            android:id="@+id/img_flash_light"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/ic_highlight_yellow" />

        <TextView
            android:id="@+id/tv_flash_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="Flashlight"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_10sdp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_mute"
        android:layout_width="0dp"
        android:layout_height="@dimen/_60sdp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/_7sdp">

        <ImageView
            android:id="@+id/img_mute"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/ic_volume_off_yellow" />

        <TextView
            android:id="@+id/tv_mute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="Mute"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_10sdp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/_60sdp"
        android:layout_weight="1"
        android:gravity="center"
        android:visibility="visible"
        android:orientation="vertical"
        android:padding="@dimen/_7sdp">

        <ImageView
            android:id="@+id/img_setting"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_settings_24" />

        <TextView
            android:id="@+id/setting_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="Settings"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_10sdp" />
    </LinearLayout>




</LinearLayout>